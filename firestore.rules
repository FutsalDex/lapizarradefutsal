rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ” Funciones reutilizables
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // El usuario es admin si su email es futsaldex@gmail.com O si su rol en la BD es 'Admin'
      return isSignedIn() && (request.auth.token.email == 'futsaldex@gmail.com'
          || (exists(/databases/$(database)/documents/users/$(request.auth.uid))
              && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin'));
    }

    // ğŸ‘¤ Usuarios
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId) || isAdmin();

      // Favoritos de un usuario
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ğŸ‹ï¸ Ejercicios
    match /exercises/{exerciseId} {
      allow read: if isSignedIn();
      // Se asume que el ejercicio tiene un campo 'userId' con el uid del autor
      allow create: if request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // ğŸŸï¸ Equipos
    match /teams/{teamId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.ownerId) || isAdmin();

      match /players/{playerId} {
        allow read, write: if exists(/databases/$(database)/documents/teams/$(teamId))
                            && (isOwner(get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId)
                            || isAdmin());
      }

      match /attendance/{attendanceId} {
        allow read, write: if exists(/databases/$(database)/documents/teams/$(teamId))
                            && (isOwner(get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId)
                            || isAdmin());
      }
    }

    // ğŸ“… Colecciones generales (acceso general para usuarios autenticados, puede requerir refinar)
    match /matches/{matchId} {
      allow read, write: if isSignedIn();
    }

    match /sessions/{sessionId} {
      allow read, write: if isSignedIn();
    }

    match /teamMembers/{memberId} {
      allow read, write: if isSignedIn();
    }

    match /referrals/{referralId} {
      allow read, write: if isSignedIn();
    }

    match /invitations/{invitationId} {
      allow read, write: if isSignedIn();
    }
  }
}
