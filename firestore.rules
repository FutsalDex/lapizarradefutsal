rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- USERS ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- TEAMS ---
    match /teams/{teamId} {
      // Crear: solo el propietario
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // Leer: propietario o miembros aceptados
      allow read: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in (resource.data.acceptedMembers ?? [])
      );

      // Actualizar: propietario o miembros aceptados
      allow update: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in (resource.data.acceptedMembers ?? [])
      );

      // Eliminar: solo el propietario
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // --- SUBCOLECCIÃ“N: PLAYERS ---
      match /players/{playerId} {
        // Leer/escribir jugadores si es el propietario o miembro aceptado
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId == request.auth.uid ||
          request.auth.uid in (get(/databases/$(database)/documents/teams/$(teamId)).data.acceptedMembers ?? [])
        );
      }
    }

    // --- DENY EVERYTHING ELSE ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
