
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =============================
    // üîí UTILIDADES
    // =============================
    function isAuth() {
      return request.auth != null;
    }

    function authEmail() {
      return isAuth() ? request.auth.token.email : null;
    }

    // üßë‚Äçüíº Propietario del equipo
    function isTeamOwner(teamId) {
      return isAuth() &&
        get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId == request.auth.uid;
    }
    
    // üëë Admin global
    function isAdmin() {
      return isAuth() && authEmail() == 'futsaldex@gmail.com';
    }


    // =============================
    // üß© TEAMS
    // =============================
    match /teams/{teamId} {
      allow read, create, update, delete: if isTeamOwner(teamId);
      allow list: if isAuth();

      // Subcolecciones
      match /players/{playerId} {
        allow read, write: if isTeamOwner(teamId);
      }
      
      match /staff/{staffId} {
        allow read, write: if isTeamOwner(teamId);
      }

      match /attendance/{attendanceId} {
        allow read, write: if isTeamOwner(teamId);
      }
    }


    // =============================
    // ‚öΩ MATCHES (PARTIDOS)
    // =============================
    match /matches/{matchId} {
      allow read, update, delete: if isAuth() && isTeamOwner(resource.data.teamId);
      allow list: if isAuth();
      allow create: if isAuth()
        && isTeamOwner(request.resource.data.teamId)
        && request.resource.data.userId == request.auth.uid;
    }


    // =============================
    // üë§ USERS
    // =============================
    match /users/{userId} {
      allow get: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow update: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow list: if isAdmin();
    }

    match /users/{userId}/{subcollection}/{docId} {
      allow read, write: if isAuth() && request.auth.uid == userId;
    }


    // =============================
    // üèãÔ∏è EXERCISES (lectura p√∫blica)
    // =============================
    match /exercises/{exerciseId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }


    // =============================
    // üìñ USER EXERCISES (personales)
    // =============================
    match /userExercises/{exerciseId} {
      allow read, update, delete: if isAuth() && resource.data.userId == request.auth.uid;
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
    }


    // =============================
    // üíå INVITATIONS
    // =============================
    match /invitations/{invitationId} {
      allow read, list: if isAdmin() || (isAuth() && request.auth.uid == resource.data.inviterId);
      allow create: if isAuth() && request.resource.data.inviterId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
  }
}

    