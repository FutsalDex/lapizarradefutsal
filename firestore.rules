rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Solo usuarios autenticados pueden acceder a Firestore
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Equipos: solo el propietario puede modificarlos
    match /teams/{teamId} {
      allow read: if request.auth != null;  // cualquiera autenticado puede ver
      allow write: if request.auth != null && (
        // el usuario que crea el doc es el due√±o
        request.auth.uid == request.resource.data.ownerId ||
        // o ya es el propietario actual
        request.auth.uid == resource.data.ownerId
      );
    }

    // Invitaciones: solo usuarios autenticados pueden crear y leer
    match /invitations/{invitationId} {
      allow read, create, delete: if request.auth != null;
    }
  }
}
